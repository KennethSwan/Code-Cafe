<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h1><%=oneCafe.name%></h1>
		<ul>
			<li>
				 <%=oneCafe.address%>
			</li>
			<% if( oneCafe.review.length !== 0) { %>
				<% for( let i = 0; i < foundReviews.length; i++) {%>
					<li>
						<%=foundReviews[i]%>
					</li>
				<%}%>
			<%}%>
			
		</ul>
	
		<br> 
		<form action="/review/<%=i%>/new">
			<button type="Submit">Add Review</button>
		</form>

		<form method="GET" action="/cafeList/<%=i%>/edit">
			<button type="Submit">Edit Review</button>
		</form> 
		<form method="POST" action="/review/<%=i%>?_method=DELETE">
			<button type="Submit">Delete Review</button>
		</form>


</body>
</html>