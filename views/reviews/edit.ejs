<!DOCTYPE html>
<html>
  <head>
  <title></title>
  </head>
  <body>
    <header>
      <h1>Edit <%=review.name%>'s Info</h1>
      <nav>
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/reviews">Reviews Index</a>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <h2>Review:</h2>
      <form action="/reviews/<%=review._id%>?_method=PUT" method="post">
        <select name="userId">
            <% for(let i = 0; i < users.length; i++) { %>
                <option
                    value="<%=users[i]._id%>"
                    <% if(users[i]._id.toString() === reviewUser._id.toString()){ %>
                        selected
                    <% } %>
                    >
                    <%=users[i].name%>
                </option>
            <% } %>
        </select><br/>
        <input type="text" name="title" value="<%=review.name%>"/><br/>
        <textarea name="body"><%=review.body%></textarea><br/>
        <input type="submit" value="Update Review"/>
      </form>
    </main>
  </body>
</html>